<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/hymnNumber"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/circle_blue"
        android:gravity="center"
        android:text="100"
        android:textColor="@android:color/white"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/hymnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hymnNumber"
        android:layout_toRightOf="@+id/hymnNumber"
        android:fontFamily="@font/limelight"
        android:text="Hymn 1"
        android:textColor="@color/text_black"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/hymnExcerpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hymnTitle"
        android:layout_toEndOf="@+id/hymnNumber"
        android:layout_toRightOf="@+id/hymnNumber"
        android:maxLength="150"
        android:maxLines="1"
        android:textColor="@color/subtitle"
        android:textSize="12sp" />
</RelativeLayout>
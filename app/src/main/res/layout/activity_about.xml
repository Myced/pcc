<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:id="@+id/app_logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/app_logo"
            android:layout_toRightOf="@id/app_logo"
            android:textSize="24sp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin16"
            android:id="@+id/app_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_title"
            android:layout_toEndOf="@id/app_logo"
            android:layout_toRightOf="@id/app_logo"
            android:textColor="@color/text_black"
            android:text="@string/app_version"
            android:textStyle="italic"
            android:id="@+id/app_version"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_logo"
            android:text="@string/pcc_about"
            android:textSize="18sp"
            android:id="@+id/app_about"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/app_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_about"
            android:padding="5dp"
            android:textColor="@color/text_black"
            android:textSize="28sp"
            android:textStyle="bold|italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_developers"
            android:padding="5dp"
            android:textColor="@color/text_black"
            android:layout_below="@id/app_developer"
            android:textSize="18sp"/>
    </RelativeLayout>
</ScrollView>